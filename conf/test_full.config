/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run hseabolt/tautyping -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    input = 'https://raw.githubusercontent.com/hseabolt/tautyping/assets/samplesheet_full.csv'
	
    // Refernce genome and GFF
    ref_fasta = 'https://raw.githubusercontent.com/hseabolt/tautyping/assets/reference/NC_045512.fasta'
	ref_gff   = 'https://raw.githubusercontent.com/hseabolt/tautyping/assets/reference/NC_045512.gff'
}
